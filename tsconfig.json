{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/common/*": ["common/*"],
            "@/config/*": ["config/*"],
            "@/controllers/*": ["controllers/*"],
            "@/exceptions/*": ["exceptions/*"],
            "@/middlewares/*": ["middlewares/*"],
            "@/database/*": ["database/*"],
            "@/repositories/*": ["repositories/*"],
            "@/routes/*": ["routes/*"],
            "@/services/*": ["services/*"],
            "@/utils/*": ["utils/*"],
            "@/validations/*": ["validations/*"],
            "@/apis/*": ["apis/*"]
        }
    }
}
